# Server
PORT=3001
NODE_ENV=development

# Supabase
SUPABASE_URL=http://localhost:54321
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# JWT (must match main Nvestiv app)
JWT_SECRET=your-jwt-secret

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# OpenAI (for embeddings + deep research agent)
OPENAI_API_KEY=your-openai-api-key

# Perplexity AI (for deep research agent)
PERPLEXITY_API_KEY=your-perplexity-api-key

# Anthropic (Claude Sonnet 4.5 for LLM Council reconciliation)
ANTHROPIC_API_KEY=your-anthropic-api-key

# CORS origins
CORS_ORIGINS=chrome-extension://*,http://localhost:5173,http://localhost:3000

# Jina AI (for web scraping during report generation)
JINA_API_KEY=your-jina-api-key

# Report viewer URL (for building report links)
REPORTS_URL=http://localhost:3000

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
